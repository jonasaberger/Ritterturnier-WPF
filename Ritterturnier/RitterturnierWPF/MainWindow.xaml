<Window x:Name="Ritterturnier" x:Class="RitterturnierWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RitterturnierWPF"
        mc:Ignorable="d"
        Title="Ritterturnier WPF" Height="450" Width="700" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/window_icon.png">
    <Canvas x:Name="Main_Canvas">
        <Label x:Name="Ritterturnier_Title" Content="Ritterturnier" Height="62" Width="320" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Center" FontFamily="Old English Text MT" FontSize="48" HorizontalAlignment="Left" Canvas.Left="10" VerticalAlignment="Center">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.226"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Grid x:Name="Inputs" Height="372" Width="350" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="62">
            <Grid x:Name="Input_Ritter" Width="310" Background="#FF672929" Height="155" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Label x:Name="Ritter_Label" Content="Ritter" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="90" Height="28" FontSize="20" FontFamily="Sitka Text Semibold" FontWeight="Bold"/>
                <TextBox x:Name="Name_Input" HorizontalAlignment="Left" Margin="30,42,0,0" Text="Name" VerticalAlignment="Top" Width="100" Height="25" FontSize="16" TextChanged="Name_Input_TextChanged"/>
                <TextBox x:Name="Telef_Input" HorizontalAlignment="Left" Margin="30,77,0,0" Text="Telefon" VerticalAlignment="Top" Width="100" Height="25" FontSize="16" TextChanged="Name_Input_TextChanged"/>
                <TextBox x:Name="Rufname_Input" HorizontalAlignment="Left" Margin="30,113,0,0" Text="Rufname" VerticalAlignment="Top" Width="100" Height="25" FontSize="16" TextChanged="Name_Input_TextChanged"/>
                <CheckBox x:Name="WaffeCheckBox" Content="Waffe" HorizontalAlignment="Left" Margin="176,45,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Height="20" Width="62" IsChecked="False" RenderTransformOrigin="0.5,0.5">
                    <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </CheckBox.RenderTransform>
                </CheckBox>
                <CheckBox x:Name="KnappeCheckBox" Content="Knappe" HorizontalAlignment="Left" Margin="176,80,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Height="20" Width="62" IsChecked="False" RenderTransformOrigin="0.5,0.5">
                    <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </CheckBox.RenderTransform>
                </CheckBox>
                <Button Content="Erstellen" HorizontalAlignment="Left" Margin="170,113,0,0" VerticalAlignment="Top" Height="25" Width="100" Click="Button_Click"/>
            </Grid>
            <Grid x:Name="Input_Waffe" Width="310" Background="#FF672929" Height="80" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,164,0,0">
                <Label x:Name="Waffe_Label" Content="Waffe&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="90" Height="28" FontSize="20" FontFamily="Sitka Text Semibold" FontWeight="Bold"/>
                <TextBox x:Name="Bezeichnung_Input" HorizontalAlignment="Left" Margin="30,43,0,0" Text="Bezeichnung" VerticalAlignment="Top" Width="100" Height="25" FontSize="16" TextChanged="Name_Input_TextChanged"/>
                <ComboBox x:Name="WaffenArtComboBox" Width="120" HorizontalAlignment="Left" Text="WaffenArt" Margin="160,43,0,12" RenderTransformOrigin="0.496,-8.726"/>
            </Grid>
            <Grid x:Name="Input_Waffe_Kopieren" Width="310" Background="#FF672929" Height="80" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,258,0,0">
                <Label x:Name="Knappe_Label" Content="Knappe" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="90" Height="35" FontSize="20" FontFamily="Sitka Text Semibold" FontWeight="Bold"/>
                <TextBox x:Name="Name_Input1" HorizontalAlignment="Left" Margin="30,45,0,0" Text="Name" VerticalAlignment="Top" Width="100" Height="25" FontSize="16" TextChanged="Name_Input_TextChanged"/>
                <Label
    Width="120" VerticalAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" FontSize="14" Content="Ausbildungsgrad" Margin="162,0,0,0" Height="34" RenderTransformOrigin="0.5,0.5">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Slider x:Name="Ausbildungsgrad_Slider" HorizontalAlignment="Left" Margin="160,50,0,0" VerticalAlignment="Top" Width="125" ValueChanged="Slider_ValueChanged" TickPlacement="BottomRight" Uid="d"/>
            </Grid>
        </Grid>
        <Grid x:Name="Outputs" Height="376" Width="330" HorizontalAlignment="Center" Canvas.Left="350" VerticalAlignment="Top" Canvas.Top="22">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,36">
                <TextBlock TextWrapping="Wrap" ><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Language="de-at" Text="X"/><LineBreak/><Run Language="de-at" Text="X"/><LineBreak/><Run Language="de-at" Text="X"/><LineBreak/><Run Language="de-at" Text="X"/><LineBreak/><Run Language="de-at" Text="X"/><LineBreak/><Run Language="de-at" Text="X"/><LineBreak/><Run Language="de-at" Text="X"/><LineBreak/><Run Language="de-at" Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/><LineBreak/><Run Text="X"/></TextBlock>
            </ScrollViewer>
        </Grid>
        <Label x:Name="Statusbar" Content="Statusbar" Canvas.Left="331" Canvas.Top="369" HorizontalAlignment="Center" VerticalAlignment="Top" Width="349" Height="31"/>
    </Canvas>
</Window>
